<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1CDCD"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shangpmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"
        android:paddingTop="5sp"
        android:text="原始密码："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/jiumima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/shangpmt"
        android:layout_toRightOf="@id/shangpmt"
        android:hint="请输入原始密码" />

    <TextView
        android:id="@+id/shangpgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jiumima"
        android:layout_marginLeft="10sp"
        android:paddingTop="5sp"
        android:text="新的密码："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/xinmima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jiumima"
        android:layout_toRightOf="@id/shangpgt"
        android:hint="请输入新的密码"
        android:password="true" />

    <TextView
        android:id="@+id/shangpjt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xinmima"
        android:layout_marginLeft="10sp"
        android:paddingTop="5sp"
        android:text="确认密码："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/querenmima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xinmima"
        android:layout_toRightOf="@id/shangpjt"
        android:hint="请输入新的密码"
        android:password="true" />

    <Button
        android:id="@+id/baocun"
        android:layout_width="110sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/querenmima"
        android:layout_alignLeft="@+id/querenmima"
        android:onClick="save"
        android:text="保存" />


</RelativeLayout>
