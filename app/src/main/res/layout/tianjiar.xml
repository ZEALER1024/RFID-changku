<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1CDCD"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t"
        android:layout_width="1sp"
        android:layout_height="1sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/title1"
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_below="@id/t"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/gysxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_marginTop="10sp"
        android:text="公司名称："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/gsmcs"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_toRightOf="@id/gysxx"
        android:prompt="@string/xzgs" />

    <TextView
        android:id="@+id/lxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gsmcs"
        android:layout_marginTop="8sp"
        android:text="联  系 人 ："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/lxre"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gsmcs"
        android:layout_toRightOf="@id/lxr"
        android:enabled="true"
        android:singleLine="true"
        android:text="张非" />

    <TextView
        android:id="@+id/lxdh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lxre"
        android:layout_marginTop="8sp"
        android:text="联系电话："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/lxdhe"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lxre"
        android:layout_toRightOf="@id/lxdh"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true"
        android:text="13838792109" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_below="@id/lxdhe"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/view1"
        android:layout_width="3sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view"
        android:layout_toRightOf="@id/gsmcs"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/spmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/gsmcs"
        android:text="商品名称："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spmcs"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_toRightOf="@id/spmc"
        android:prompt="@string/xzsp" />

    <TextView
        android:id="@+id/spgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spmcs"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/gsmcs"
        android:text="商品规格："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/spgge"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spmcs"
        android:layout_toRightOf="@id/spgg"
        android:enabled="true"
        android:singleLine="true"
        android:text="13" />

    <TextView
        android:id="@+id/jldw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spgge"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/gsmcs"
        android:text="计量单位："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/jldwe"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spgge"
        android:layout_toRightOf="@id/spgg"
        android:enabled="true"
        android:singleLine="true"
        android:text="个" />

    <TextView
        android:id="@+id/jhdj"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="8sp"
        android:text="进货单价："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/jhdje"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_toRightOf="@id/jhdj"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/jhsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/jhdje"
        android:text="进货数量："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/jhsle"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_toRightOf="@id/jhsl"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/jhrq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jhdje"
        android:layout_marginTop="8sp"
        android:text="进货日期："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <DatePicker
        android:id="@+id/jhrqd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jhdje"
        android:layout_toRightOf="@id/jhrq" />

    <Button
        android:id="@+id/save"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/jhdje"
        android:layout_marginTop="20sp"
        android:layout_toRightOf="@id/jhrqd"
        android:onClick="save"
        android:text="保存" />

    <Button
        android:id="@+id/back"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/save"
        android:layout_toRightOf="@id/jhrqd"
        android:onClick="back"
        android:text="返回" />
</RelativeLayout>
