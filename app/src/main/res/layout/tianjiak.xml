<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1CDCD"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6495ED"
        android:text="添加客户信息"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gsmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gsmce"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="200dp"
        android:text="公司名称："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/gsmce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/gsmc"
        android:hint="填写公司名称"
        android:singleLine="true" />

    <TextView
        android:id="@+id/lxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主联系人："
        android:layout_marginTop="8sp"
        android:layout_alignTop="@+id/lxre"
        android:layout_marginLeft="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/lxre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gsmce"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/lxr"
        android:hint="填写联系人    "
        android:singleLine="true" />

    <TextView
        android:id="@+id/lxdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系地址："
        android:layout_marginTop="8sp"
        android:layout_alignTop="@+id/lxdze"
        android:layout_marginLeft="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/lxdze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lxre"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/lxdz"
        android:hint="填写联系地址"
        android:singleLine="true" />


    <TextView
        android:id="@+id/yzbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮政编码："
        android:layout_marginTop="8sp"
        android:layout_alignTop="@+id/yzbme"
        android:layout_marginLeft="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/yzbme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lxdze"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/yzbm"
        android:hint="填写邮政编码"
        android:phoneNumber="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/lxdh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话："
        android:layout_marginTop="8sp"
        android:layout_alignTop="@+id/lxdhe"
        android:layout_marginLeft="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/lxdhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yzbme"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/lxdh"
        android:hint="填写联系电话"
        android:phoneNumber="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/bcbtn"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lxdhe"
        android:layout_marginTop="10sp"
       android:layout_alignLeft="@+id/lxdhe"
        android:onClick="save1"
        android:text="保存" />



</RelativeLayout>
