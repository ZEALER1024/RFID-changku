<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1CDCD"
        android:orientation="vertical">

        <Button
            android:id="@+id/jibenxinxi"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_centerVertical="true"
            android:onClick="onshangpin"
            android:text="商品信息" />

        <Button
            android:id="@+id/kucunguanli"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/jibenxinxi"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="10sp"
            android:onClick="onkehu"
            android:text="客户信息" />

        <Button
            android:id="@+id/tianjia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="30sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="ontianjias"
            android:text="添加商品"
            android:visibility="invisible" />

        <Button
            android:id="@+id/shanchu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tianjia1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="shanchus"
            android:text="删除商品"
            android:visibility="invisible" />

        <Button
            android:id="@+id/xiugai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shanchu1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="xiugais"
            android:text="修改商品"
            android:visibility="invisible" />

        <Button
            android:id="@+id/chaxun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiugai1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="chaxuns"
            android:text="查询商品"
            android:visibility="invisible" />

        <Button
            android:id="@+id/tianjia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="30sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="tianjiak"
            android:text="添加客户"
            android:visibility="invisible" />

        <Button
            android:id="@+id/shanchu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tianjia1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="shanchuk"
            android:text="删除客户"
            android:visibility="invisible" />

        <Button
            android:id="@+id/xiugai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shanchu1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="xiugaik"
            android:text="修改客户"
            android:visibility="invisible" />

        <Button
            android:id="@+id/chaxun2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiugai1"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/kucunguanli"
            android:onClick="chaxunk"
            android:text="查询客户"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1CDCD"
        android:orientation="vertical">

        <Button
            android:id="@+id/ruku"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_centerVertical="true"
            android:onClick="onruku"
            android:text="商品入库" />

        <Button
            android:id="@+id/chuku"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruku"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="10sp"
            android:onClick="onchuku"
            android:text="商品出库" />

        <Button
            android:id="@+id/tianjia4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="30sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="tianjiar"
            android:text="添加入库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/shanchu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tianjia4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="shanchur"
            android:text="删除入库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/xiugai4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shanchu4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="xiugair"
            android:text="修改入库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/chaxun4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiugai4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="chaxunruku"
            android:text="查询入库"

            android:visibility="invisible" />

        <Button
            android:id="@+id/tianjia5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="30sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="tianjiac"
            android:text="添加出库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/shanchu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tianjia4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="shanchuc"
            android:text="删除出库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/xiugai5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shanchu4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="xiugaic"
            android:text="修改出库"
            android:visibility="invisible" />

        <Button
            android:id="@+id/chaxun5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiugai4"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ruku"
            android:onClick="chaxunc"
            android:text="查询出库"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/li3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1CDCD"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cx"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="kucun"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100sp"
            android:text="库存查询" />
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/cx"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="100sp"
            android:onClick="pandian"
            android:text="库存盘点" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/li5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1CDCD"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mima"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="mima"
            android:layout_marginLeft="100sp"
            android:text="修改密码"

            />
        <Button
            android:id="@+id/yonghu"
            android:layout_below="@id/mima"
            android:layout_alignLeft="@+id/mima"
            android:layout_marginTop="10sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:onClick="yonghu"
            android:text="账户管理"

            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/li4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1CDCD"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/RFID_Gname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="公司名称"
                android:gravity="center"
                android:textColor="#6A5ACD"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RFID_Pname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商品名"
                android:textColor="#6A5ACD"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/RFID_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量"
                android:textColor="#6A5ACD"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</TabHost>
