<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="32sp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="序号"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text1"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="公司名称"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="52sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text2"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="联系人"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="92sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text3"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="电话"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text4"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="商品"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="62sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text5"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="规格"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="32sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text6"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="单位"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/text9"
        android:layout_width="72sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text7"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="数量"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text9"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:text="日期"
        android:textColor="@android:color/black" />

    <ListView
        android:background="#D1EEEE"
        android:id="@+id/kehulist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="true"
        android:layout_below="@id/text1"></ListView>

</RelativeLayout>
